@model IPTreatment.Repository.Models.PatientDetail
@using IPT.MVC.Helpers;
@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Patient Detail</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div >
                <label asp-for="Ailment" class="control-label"></label>
                <br />
                @Html.DropDownListFor(model => model.Ailment,  RepoHelper.GetAllAilments(), "Select")
                <span asp-validation-for="Ailment" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Age" class="control-label"></label>
                <input asp-for="Age" class="form-control" />
                <span asp-validation-for="Age" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreatmentPackageName" class="control-label"></label>
                <br />
                @Html.DropDownListFor(model => model.TreatmentPackageName, RepoHelper.GetAllTreatmentPackages(), "Select")
                <span asp-validation-for="TreatmentPackageName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TreatmentCommencementDate" class="control-label"></label>
                <input asp-for="TreatmentCommencementDate" class="form-control" />
                <span asp-validation-for="TreatmentCommencementDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
