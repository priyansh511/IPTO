@model InsuranceClaimRepository.Models.InitiateClaim
@using IPT.MVC.Helpers
@{
    ViewData["Title"] = "Create";
}


<h3>New Claim</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PatientId" class="control-label"></label>
                <br />
                @Html.DropDownListFor(model => model.PatientId, await RepoHelper.GetAllPatients(), "Select")
            </div>
            
            <div class="form-group">
                <label asp-for="TreatmentPlanId" class="control-label"></label>
                <br />
                @Html.DropDownListFor(model => model.TreatmentPlanId, await RepoHelper.GetAllTreatmentPlans(), "Select")
            </div>
            <div class="form-group">
                <label asp-for="InsurerId" class="control-label"></label>
                <br />
                @Html.DropDownListFor(model => model.InsurerId, await RepoHelper.GetAllInsurers(), "Select")
            </div>
            <div class="form-group">
                <br />
                <input type="submit" value="Create" class="btn-info" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
